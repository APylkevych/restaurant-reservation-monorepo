{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "target": "es5",
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "build",
    "dist"
  ]
}